
<div id="home_splash" class="twelve columns">

  <div class="six columns offset-by-one">
    <h1>Learn anything, anywhere.</h1>
    <h3><%= number_with_delimiter(@course_count) %> free courses</h3>
    <h3><%= number_with_delimiter(@hours) %> hours of learning</h3>
    <h3>Share notes, follow friends</h3>
  </div>

  <div class="four columns" id="login_reg">
    <h2>Register</h2>
    <%= render 'shared/register' %>


    <h2>Login</h2>
    <%= form_tag '/login', :class => 'form-inline' do %>
      <%= text_field_tag 'email', nil, :placeholder => "Email", :class => 'input-medium' %>
      <%= password_field_tag 'password', nil, :placeholder => "Password", :class => 'input-medium' %>
      <%= submit_tag 'Login', :class => 'btn' %>
    <% end %>

    <a href="/auth/twitter" class="round button"><span class="glyph social">e</span> Twitter</a>
  </div><!--four columns-->

  <div class ="one columns">
  </div>

</div>

